{
    "manifest_version": 2,
    "name": "StealthLike",
    "version": "1.0",
    "description": "When we review Pull Requests, We often want to LIKE a review comment or diff lines. stealthLike.js is the script to carry out our wish.",
    "icons": {
        "16":  "icons/StealthLike_icon_ChromeExtension_16x16.png",
        "32":  "icons/StealthLike_icon_ChromeExtension_32x32.png",
        "48":  "icons/StealthLike_icon_ChromeExtension_48x48.png",
        "128": "icons/StealthLike_icon_ChromeExtension_128x128.png"
    },
    "content_scripts": [{
        "matches": [
            "https://*/**/issues/*",
            "https://*/**/pull/*",
            "http://*/**/issues/*",
            "http://*/**/pull/*"
        ],
        "js": [
            "stealthLike.js"
        ]
    }]
}
